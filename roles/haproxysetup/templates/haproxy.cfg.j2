frontend mariadb
	bind {{ ansible_all_ipv4_addresses[0] }}:3306
	mode tcp
	default_backend mariadb_galera

backend mariadb_galera
	balance roundrobin
#	balance source
	mode tcp
        option mysql-check user haproxy
	option tcpka
	server db1.lab.example.com {{ hostvars['db1.lab.example.com']['ansible_default_ipv4']['address'] }}:3306 check weight 1
        server db2.lab.example.com 192.168.144.22:3306 check weight 1
        server db3.lab.example.com 192.168.144.23:3306 check weight 1
